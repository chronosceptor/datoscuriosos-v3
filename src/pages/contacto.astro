---
import Layout from "../layouts/Layout.astro";
import "../css/slug.scss";
---

<Layout title="aa" image="aa">
	<main>
		<div class="t-container t-max-w-7xl md:t-py-20">
			<div class="t-flex t-flex-col">
				<div
					class="t-order-2 t-mx-auto t-mb-5 t-pt-10 sm:t-px-[10vw] md:t-order-1 md:t-pt-0"
				>
					<h1 class="slug word-wrap t-mb-5 t-font-p t-text-white">
						Contacto
					</h1>
				</div>
			</div>

			<div class="t-mx-auto t-max-w-xl">
				<form
					class="t-mb-16"
					name="contacto"
					method="POST"
					netlify-honeypot="bot-field"
					data-netlify="true"
				>
					<input class="t-hidden" name="bot-field" />
					<input
						type="email"
						class="t-mb-5 t-block t-w-full t-rounded-md t-border t-border-grey t-bg-transparent t-px-3 t-py-2 t-font-s t-text-grey"
						placeholder="Email"
						name="email"
						required
					/>

					<textarea
						class="t-mb-5 t-block t-w-full t-rounded-md t-border t-border-grey t-bg-transparent t-px-3 t-py-2 t-font-s t-text-grey"
						placeholder="Mensaje"
						name="mensaje"
						rows="5"
						required></textarea>

					<button
						type="submit"
						class="t-block t-w-full t-rounded-md t-bg-primary t-px-6 t-py-2 t-font-s t-font-bold t-text-dark"
						>Env√≠ar</button
					>
				</form>
			</div>
		</div>
	</main>
</Layout>
